<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="My First App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button_link_myFirstApp" android:layout_marginTop="16dp"
            android:onClick="linkActivityMyFirstApp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="API Call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_link_apicall" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_link_myFirstApp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:onClick="linkActivityAPICall"/>
    <Button
            android:text="Remote Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button_link_remote_image" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_link_apicall"
            app:layout_constraintHorizontal_bias="0.501" android:onClick="linkActivityRemoteImage"/>
    <Button
            android:text="Coroutine in UI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_link_coroutine_ui"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_link_remote_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="linkActivityCoroutineUI"/>
    <Button
            android:text="Retrofit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_link_retrofit" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_link_coroutine_ui"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:onClick="linkActivityRetrofit"/>
    <Button
            android:text="Weather API"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_link_weatherAPI"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_link_retrofit"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:onClick="linkActivityWeatherAPI"/>
</androidx.constraintlayout.widget.ConstraintLayout>